<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <TextView
        android:id="@+id/textoslogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bienvenido a ChatMouse\n\nREGISTRATE"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginTop="15dp"
        android:textSize="20sp"/>

    <ImageView
        android:id="@+id/imagenlogin"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@id/textoslogin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/mouse"/>
    
    <EditText
        android:id="@+id/numero"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minWidth="48dp"
        android:minHeight="48dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_below="@id/imagenlogin"
        android:layout_marginTop="30dp"
        android:hint="Ingresar NÃºmero"
        android:padding="10dp"
        android:background="@drawable/textos"
        android:inputType="phone"/>
    
    <Button
        android:id="@+id/enviar_numero"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_below="@id/numero"
        android:layout_marginTop="20dp"
        android:text="Enviar"
        android:textColor="@color/white"
        android:background="@drawable/botones"
        android:textSize="18sp"/>

    <!--parte de envio de codigo sms-->

    <EditText
        android:id="@+id/codigo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_below="@id/enviar_numero"
        android:layout_marginTop="30dp"
        android:hint="Ingresar Codigo"
        android:padding="10dp"
        android:background="@drawable/textos"
        android:visibility="gone"
        android:inputType="phone"/>

    <Button
        android:id="@+id/enviar_codigo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_below="@id/codigo"
        android:layout_marginTop="20dp"
        android:text="Enviar Codigo"
        android:textColor="@color/white"
        android:background="@drawable/botones"
        android:visibility="gone"
        android:textSize="18sp"/>


</RelativeLayout>